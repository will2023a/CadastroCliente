generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserAdmin {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  senha      String   
  nome       String
  sobrenome  String
  cpf        String   @unique
  grupo      Int   // Campo para o grupo
  createdAt  DateTime @default(now())
}



model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  nome          String?
  sobrenome     String
  rg            String
  cpf           String   @unique
  nascimento    DateTime
  grupo         Int
  enderecoId    Int
  endereco      Endereco @relation(fields: [enderecoId], references: [id]) // Define o relacionamento com 'Endereco'
  createdAt     DateTime @default(now())
}

model Endereco {
  id       Int      @id @default(autoincrement()) // Chave prim√°ria
  rua      String
  numero   String
  bairro   String
  cidade   String
  estado   String
  cep      String
  users    User[]   // Relacionamento com a tabela 'User'
}



